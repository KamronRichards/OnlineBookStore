@{
    ViewData["Title"] = "Home Page";
}

@model BooksViewModel

@foreach (Book p in Model.Books)
{
<div class="card card-outline-primary m-1 p-1">
    <div class="bg-faded p-1">
        <h4>
            @p.Title
            <span class="badge badge-pill badge-primary" style="float:right">
                <small>@p.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
    <div class="card-text p-1">Book Title: @p.Title</div>
    <div class="card-text p-1">Author: @p.Author</div>
    <div class="card-text p-1">Publisher: @p.Publisher</div>
    <div class="card-text p-1">ISBN: @p.Isbn</div>
    <div class="card-text p-1">Classification/Category: @p.Classification</div>
    <div class="card-text p-1">Number of Pages: @p.PageCount</div>

</div>
}


<div page-blah="@Model.PageInfo" page-action="" page-classes-enabled="true"
     page-class="btn" page-class-normal="btn-outline-dark"
     page-class-selected="btn-primary" class="btn-group pull-right m-1">
</div>



